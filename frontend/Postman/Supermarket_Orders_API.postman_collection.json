  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\n",
                  "    pm.response.to.have.status(200);\n",
                  "});\n",
                  "\n",
                  "if (pm.response.code === 200) {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    pm.environment.set(\"token\", jsonData.data.token);\n",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"admin\", \"password\": \"1\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders - Create",
      "item": [
        {
          "name": "1. Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {\n",
                  "    pm.response.to.have.status(201);\n",
                  "});\n",
                  "\n",
                  "pm.test(\"Order created successfully\", function () {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.data.order_code).to.exist;\n",
                  "    pm.expect(jsonData.data.id).to.exist;\n",
                  "    pm.environment.set(\"order_id\", jsonData.data.id);\n",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"store_id\": 1, \"customer_id\": 1, \"items\": [{\"variant_id\": 1, \"quantity\": 2, \"unit_price\": 200000, \"discount_per_item\": 10000}, {\"variant_id\": 2, \"quantity\": 1, \"unit_price\": 100000, \"discount_per_item\": 0}], \"subtotal\": 500000, \"discount_amount\": 10000, \"tax_amount\": 25000, \"shipping_fee\": 20000, \"payment_method\": \"cash\", \"shipping_address\": \"123 Nguyễn Huệ, Q.1, TP.HCM\", \"customer_note\": \"Giao hàng sáng 8h\", \"internal_note\": \"Khách VIP\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "2. Create Order - Missing store_id",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 400\", function () {\n",
