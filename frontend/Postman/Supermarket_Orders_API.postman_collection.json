      "item": [
        {
          "name": "1. Get All Orders",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\n",
                  "    pm.response.to.have.status(200);\n",
                  "});\n",
                  "\n",
                  "pm.test(\"Response has orders data\", function () {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.data).to.be.an('array');\n",
                  "});\n",
                  "\n",
                  "pm.test(\"Response has pagination info\", function () {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.pagination).to.exist;\n",
                  "    pm.expect(jsonData.pagination.total).to.exist;\n",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
