    {
      "name": "Orders - Statistics",
      "item": [
        {
          "name": "1. Get Orders Summary Statistics",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\n",
                  "    pm.response.to.have.status(200);\n",
                  "});\n",
                  "\n",
                  "pm.test(\"Statistics response has required fields\", function () {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.data.total_orders).to.exist;\n",
                  "    pm.expect(jsonData.data.by_status).to.exist;\n",
                  "    pm.expect(jsonData.data.by_payment).to.exist;\n",
                  "    pm.expect(jsonData.data.revenue).to.exist;\n",
                  "});\n",
                  "\n",
                  "pm.test(\"Statistics values are numbers\", function () {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    pm.expect(jsonData.data.total_orders).to.be.a('number');\n",
                  "    pm.expect(jsonData.data.revenue.total).to.be.a('number');\n",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/stats/summary",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "stats", "summary"]
            }
