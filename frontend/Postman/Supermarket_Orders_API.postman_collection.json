        {
          "name": "5. Get Orders - Sort by Amount (Highest First)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\n",
                  "    pm.response.to.have.status(200);\n",
                  "});\n",
                  "\n",
                  "pm.test(\"Orders sorted by amount (DESC)\", function () {\n",
                  "    var jsonData = pm.response.json();\n",
                  "    if (jsonData.data.length > 1) {\n",
                  "        for (var i = 0; i < jsonData.data.length - 1; i++) {\n",
                  "            pm.expect(jsonData.data[i].amount.total).to.be.at.least(\n",
                  "                jsonData.data[i + 1].amount.total\n",
                  "            );\n",
                  "        }\n",
                  "    }\n",
                  "});"
                ]
              }
            }
          ],
