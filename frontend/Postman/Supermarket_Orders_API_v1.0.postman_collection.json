{
  "info": {
    "name": "Supermarket Orders API - Complete",
    "description": "Complete REST API for order management with CRUD operations, filtering, sorting, pagination, and advanced analytics",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
